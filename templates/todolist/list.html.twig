{% extends 'base.html.twig' %}
{% block title %}
    {{ listName }}
{% endblock %}
{% block body %}
    <main>
        <div class="container-fluid">
            <div class="row">
                <h1 class="col-12 text-center">{{ listName }}</h1>
                <div class="col-12 mx-auto text-center">
                    <input type="text" id="new-element" placeholder="Ecrire ici...">
                    <span class="add-element">Ajouter</span>
                </div>
                <ul id="myList">
                    {% for task in tasks %}
                        <li class="{{ task.checked==true?'checked' }}">
                            <input type="hidden" id="{{ task.id }}">
                            <input type="hidden" id="{{ task.ordre }}">
                            <p>
                                {{ task.content }}
                            </p>
                            <div class ="arrows"><span class="arrowUp">↑</span><span class="arrowDown">↓</span></div>
                            <span class="close">×</span>
                        </li>
                    {% endfor %}

                </ul>
            </div>
        </div>
    </main>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('toDoList') }}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js"></script>
{% endblock %}
{% extends 'base.html.twig' %}
{% block title %}
    Mes listes !
{% endblock %}
{% block body %}
    <main>
        <div class="container-fluid">
            <div class="row">
                <h1 class="col-12 text-center">Vos listes</h1>
                {% for list in lists %}
                    <div class="col-lg-3 col-md-6 col-12 text-center"><a href={{ path('app_toDoList',{id:list.id}) }}>{{ list.name}}</a></div>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}
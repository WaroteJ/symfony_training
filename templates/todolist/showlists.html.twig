{% extends 'base.html.twig' %}
{% block title %}
    Mes listes !
{% endblock %}
{% block body %}
    <main>
        <div class="container-fluid">
            <div class="row">
                <h1 class="col-12 text-center">Vos listes</h1>
                <button class="col-4 mx-auto btn btn-info mb-2" id="newList">Créer une nouvelle liste</button>
            </div>
            <ul class="row list-unstyled align-items-center m-0" id="List">
                {% for list in lists %}
                    <li class="col-lg-3 col-md-4 col-6 text-center mb-2">
                        <input type="hidden" id="{{list.id}}">
                        <div class="row align-items-center">
                            <a class="col-10" href={{ path('app_toDoList',{id:list.id}) }}>{{ list.name}}</a>
                            <button class="col-2 btn btn-danger del">×</button>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </main>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('showLists') }}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js"></script>
{% endblock %}